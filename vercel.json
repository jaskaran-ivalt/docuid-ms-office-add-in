{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "rewrites": [
    {
      "source": "/",
      "destination": "/taskpane.html"
    },
    {
      "source": "/index.html",
      "destination": "/taskpane.html"
    },
    {
      "source": "/api/docuid/biometric/:path*",
      "destination": "https://dev.docuid.net/api/biometric/:path*"
    },
    {
      "source": "/api/docuid/documents/:id/download",
      "destination": "https://dev.docuid.net/api/documents/:id/download"
    },
    {
      "source": "/api/docuid/documents/:id/content",
      "destination": "https://dev.docuid.net/api/documents/:id/content"
    },
    {
      "source": "/api/docuid/documents/:path*",
      "destination": "https://dev.docuid.net/api/dashboard/documents/:path*"
    },
    {
      "source": "/api/docuid/shares/:path*",
      "destination": "https://dev.docuid.net/api/dashboard/shares/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://docuid-ms-office-add-in.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, Cookie, Set-Cookie"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
